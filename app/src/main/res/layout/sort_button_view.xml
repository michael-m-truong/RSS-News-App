<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Selector Choice 1 -->
        <RadioButton
            android:id="@+id/selector_choice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today" />

        <!-- Selector Choice 2 -->
        <RadioButton
            android:id="@+id/selector_choice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last week" />

        <!-- Selector Choice 3 -->
        <RadioButton
            android:id="@+id/selector_choice3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="7dp"
            android:paddingEnd="8dp"
            >
            <!-- Cancel Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />

            <View
                android:layout_width="30dp"
                android:layout_height="1dp" />

            <!-- Apply Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply" />
        </LinearLayout>

    </RadioGroup>

</LinearLayout>
