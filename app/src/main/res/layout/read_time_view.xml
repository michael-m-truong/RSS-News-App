<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_group">
        <!-- Read Choice 1 -->
        <CheckBox
            android:id="@+id/read_choice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1-3 mins"
            android:paddingLeft="16dp"
            android:checked="false" />

        <!-- Read Choice 2 -->
        <CheckBox
            android:id="@+id/read_choice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4-6 mins"
            android:paddingLeft="16dp"
            android:checked="false" />

        <!-- Read Choice 3 -->
        <CheckBox
            android:id="@+id/read_choice3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6+ mins"
            android:paddingLeft="16dp"
            android:checked="false" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="7dp"
            android:paddingEnd="8dp"
            >
            <!-- Cancel Button -->
            <Button
                android:id="@+id/read_cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />

            <!-- Space for the middle of the button -->
            <View
                android:layout_width="30dp"
                android:layout_height="1dp" />

            <!-- Apply Button -->
            <Button
                android:id="@+id/read_apply_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply" />
        </LinearLayout>

    </RadioGroup>
</LinearLayout>