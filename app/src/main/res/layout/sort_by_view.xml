<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.bignerdranch.android.newsapp.SortByOption" />
        <variable
            name="viewModel"
            type="com.bignerdranch.android.newsapp.ArticleListViewModel" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Sorting Choice 1 -->
        <RadioButton
            android:id="@+id/newest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Newest"
            android:checked="@{viewModel.sortByOption == SortByOption.NEWEST}"
            />

        <!-- Sorting Choice 2 -->
        <RadioButton
            android:id="@+id/most_popular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Most Popular"
            android:checked="@{viewModel.sortByOption == SortByOption.MOST_POPULAR}"/>

        <!-- Linear Layout for Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="7dp"
            android:paddingEnd="8dp"
            >
            <!-- Cancel Button -->
            <Button
                android:id="@+id/newest_cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />

            <View
                android:layout_width="30dp"
                android:layout_height="1dp" />

            <!-- Apply Button -->
            <Button
                android:id="@+id/newest_apply_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply" />
        </LinearLayout>

    </RadioGroup>

</LinearLayout>
</layout>